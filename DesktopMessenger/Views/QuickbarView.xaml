<Window x:Class="DesktopMessenger.Views.QuickbarView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QuickbarView" Height="80" Width="300" SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" HorizontalAlignment="Right">
        <Button Height="40" Width="40" Command="{Binding Path=ShowContactListCommand}"/>
        <!-- TODO add button for each ChatView -->
        <ListBox ItemsSource="{Binding Path=Chats}"></ListBox>
    </StackPanel>
</Window>
