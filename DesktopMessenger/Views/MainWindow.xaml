<Window x:Class="DesktopMessenger.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="Desktop Messenger" Height="539" Width="281">
    <StackPanel>
    	<StackPanel x:Name="ConfPanel" Height="29" Orientation="Horizontal" HorizontalAlignment="Right">
    		<ComboBox x:Name="statusBox" Width="120" HorizontalAlignment="Left">
    			<ComboBoxItem Content="Online"/>
    			<ComboBoxItem Content="Away"/>
    			<ComboBoxItem Content="Busy"/>
    			<ComboBoxItem Content="N/A"/>
    			<ComboBoxItem Content="Invisible"/>
    			<ComboBoxItem Content="Offline"/>
    		</ComboBox>
    		<Button x:Name="settingBtn" Content="Settings" HorizontalAlignment="Right" Height="30" Click="Settings_Click"/>
    	</StackPanel>
        <tb:TaskbarIcon ToolTip="Desktop Messenger">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu Background="LightCoral">
                    <MenuItem Header="Settings" Click="Settings_Click" />
                    <MenuItem Header="Quit" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </StackPanel>

    
</Window>
