<Window x:Class="DesktopMessenger.Views.ChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatView" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <!-- TODO implement themes -->
        <Label Grid.Row="0" Foreground="White" Background="LightGray" Content="TITLE" />
        <TextBox Grid.Row="1" Foreground="Black" Background="White" IsReadOnly="True" Text="CHATLOG" />
        <TextBox Grid.Row="2" Foreground="Black" Background="White" Text="INPUT" />
    </Grid>
</Window>
